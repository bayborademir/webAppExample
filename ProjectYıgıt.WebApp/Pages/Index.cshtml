@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h3>List of Employees </h3>

</div>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th> id</th>
                <th> Name Surname</th>
                <th> Age</th>
                <th> Gender</th>
                <th> Phone Number</th>
                <th> Email</th>
                <th> Sil</th>
                <th> Düzenle</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Employees)
            {
                <tr>
                    <td>@obj.Id </td>
                    <td>@obj.NameSurname </td>
                    <td>@obj.Age </td>
                    <td>@obj.Gender </td>
                    <td>@obj.PhoneNumber </td>
                    <td>@obj.Email </td>
                    <td><a href="api/Employee/delete/@obj.Id" class="btn btn-danger">Delete</a></td>
                    <td><a asp-page="/EditEmployee" asp-route-ID="@obj.Id" class="btn btn-warning">Update</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="AddEmployee" class="btn btn-primary">Create New Employee</a>
