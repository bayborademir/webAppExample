@page 
@model EditEmployeeModel
@{
}

<div>
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Edit Employee</h2>
                <hr />
            </div>

            
                <div class="mb-3">
                    <label>Name Surname</label>
                </div>

                <div class="mb-3">
                    <input asp-for="EditEmployee.NameSurname" name="NameSurname" />
                </div>

                <div class="mb-3">
                    <label>Age</label>
                </div>

                <div class="mb-3">
                    <input asp-for="EditEmployee.Age" name="Age" />
                </div>

                <div class="mb-3">
                    <label>Gender</label>
                </div>

                <div class="mb-3">
                    <input asp-for="EditEmployee.Gender" name="Gender" />
                </div>

                <div class="mb-3">
                    <label>Phone Number</label>
                </div>

                <div class="mb-3">
                    <input asp-for="EditEmployee.PhoneNumber" name="PhoneNumber" />
                </div>

                <div class="mb-3">
                    <label>Email</label>
                </div>

                <div class="mb-3">
                    <input asp-for="EditEmployee.Email" name="Email" />
                </div>

            


            <button type="submit" class="btn btn-primary" style="width:150px;">Update Employee</button>
        </div>
    </form>
</div>